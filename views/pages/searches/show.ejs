<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Collection</title>
    <link rel="stylesheet" href="/styles/reset.css">
    <link rel="stylesheet" href="/styles/icons.css">
    <link rel="stylesheet" href="/styles/base.css">
    <link rel="stylesheet" href="/styles/layout.css">
    <link rel="stylesheet" href="/styles/modules/error.css">
    <link rel="stylesheet" href="/styles/modules/partials/header.css">
    <link rel="stylesheet" href="/styles/modules/partials/footer.css">
    <link rel="icon" type="image/png" href="https://www.freeiconspng.com/uploads/book-icon--icon-search-engine-6.png">
    <link rel="stylesheet" href="/styles/modules/searches/show.css">
    <link rel="stylesheet" href="/styles/modules/books/show.css">
  </head>
  <body>
    <header>
      <div>
        <a href="/">
          <h1>Best Books!</h1>
        </a>
      </div>
      <nav>
        <div class="icon-menu"></div>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/searches/new">Search</a></li>
        </ul>
      </nav>
    </header>
    <main>
      <h4>Search Results</h4>
      <ul class="search-results">
          <div class="book-container">
        <% searchResults.forEach(book => { %>
          <li data-book-id="<%= book.isbn %>">
           
              <img src=<%= book.image_url %>>
              <section>
                <h3><%= book.title %></h3>
                <span><%= book.author %></span>
                <p class="desc"><%= book.description %></p>        
              </section>
          </li>
          </div>
          <!-- https://www.w3schools.com/tags/tryit.asp?filename=tryhtml_form_submit -->
          <!-- https://www.w3schools.com/jquery/tryit.asp?filename=tryjquery_hide_show -->
          <button id="add-book-form-button"><a href="/books/<%= book.id %>">Select This Book</a></button>
          <form action="/books" method="POST" class="hide-add-book-form">
            <input input type="text" name="title" id="title" value="<%= book.title %>">
            <input input type="text" name="author" id="author" value="<%= book.author %>">
            <input input type="text" name="ISBN" id="ISBN" value="<%= book.ISBN %>">
            <input input type="text" name="image_url" id="image_url" value="<%= book.image_url %>">
            <input input type="text" name="description" id="description" value="<%= book.description %>">
            <input input type="text" name="bookshelf" id="bookshelf" value="<%= book.bookshelf %>">
            <input type="submit" value="Add to Database">
         </form>


        <% }) %>
      </ul>
    </main>
    <footer>
      <ul>
        <li><span class="icon-mail2"><a href=""></a></span></li>
        <li><span class="icon-twitter"><a href=""></a></span></li>
        <li><span class="icon-github"><a href=""></a></span></li>
        <li><span class="icon-linkedin2"><a href=""></a></span></li>
      </ul>
    </footer>
    <!--https://www.w3schools.com/jquery/jquery_get_started.asp -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  </body>
</html>

