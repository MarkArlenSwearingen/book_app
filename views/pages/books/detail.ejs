<section>

  <li data-book-id="<%= book.ISBN %>">
    <div class="book-container">
      <img src=<%= book.image_url %>>
      <section>
        <h3><%= book.title %></h3>
        <span><%= book.author %></span>
        <p class="desc"><%= book.description %></p>        
      </section>
  </li>
  <button ><a href="/books/<%= book.id %>">Select This Book</a></button>
  <div>
    <form action="/books/<%= book.id %>?_method=DELETE">
    <input type="hidden" name="_method" value='DELETE'>
    <input type="submit" name="Delete" value="Delete this Book" formmethod="POST">
    </form>
  </div>
  <div>
    <button ><a href="/">Book List</a></button>
  </div>
</section>


   